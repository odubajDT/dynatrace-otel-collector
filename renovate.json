{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    ":semanticCommitsDisabled"
  ],
  "ignorePaths": [
    "dynatrace/_codefiles",
    "dynatrace/_data",
    "managed/_codefiles",
    "managed/_data"
  ],
  "commitMessagePrefix": "SPN-0 ",
  "reviewers": [
    "jakub.wadas",
    "filip.chmaj",
    "adham.sabry",
    "mikita.shunko",
    "Paul.Anderson"
  ],
  "enabledManagers": [
    "npm",
    "dockerfile",
    "kubernetes",
    "nvm",
    "custom.regex"
  ],
  "ignoreDeps": [
    "registry.lab.dynatrace.org/spine/platform-tools"
  ],
  "packageRules": [
    {
      "changelogUrl": "https://bitbucket.lab.dynatrace.org/projects/SUS/repos/docstack/raw/CHANGELOG.md",
      "matchPackageNames": [
        "@docstack/{/,}**"
      ]
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "Dynatrace/dynatrace-otel-collector"
      ],
      "extractVersion": "^v(?<version>.+?)$"
    }
  ],
  "npm": {
    "minimumReleaseAge": null
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^test\\.md$"
      ],
      "depNameTemplate": "Dynatrace/dynatrace-otel-collector",
      "matchStrings": [
        "ghcr.io/dynatrace/dynatrace-otel-collector/dynatrace-otel-collector\\s* tag:\\s?\\\"*(?<currentValue>\\d+\\.\\d+\\.\\d+)?",
        "dynatrace-otel-collector:(?<currentValue>\\d+\\.\\d+\\.\\d+)?",
        "https://github.com/Dynatrace/dynatrace-otel-collector/releases/v(?<currentValue>\\d+\\.\\d+\\.\\d+)?"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "fileMatch": [
        "^test\\.md$"
      ],
      "depNameTemplate": "open-telemetry/opentelemetry-operator",
      "matchStrings": [
        "https://github\\.com/open-telemetry/opentelemetry-operator/releases/download/(?<currentValue>v\\d+\\.\\d+\\.\\d+)?"
      ]
    }
  ]
}
